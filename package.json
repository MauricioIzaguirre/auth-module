{
  "name": "auth-module-2025",
  "version": "1.0.0",
  "description": "Authentication module with server and client",
  "private": true,
  "type": "module",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "pnpm --filter server dev",
    "build": "pnpm --filter server build",
    "start": "pnpm --filter server start",
    "lint": "pnpm --filter server lint",
    "test": "pnpm --filter server test",
    "clean": "pnpm --filter server clean",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "install:all": "pnpm install",
    "build:all": "pnpm --filter server build && pnpm --filter client build"
  },
  "keywords": [
    "authentication",
    "typescript",
    "express",
    "postgresql",
    "rbac",
    "monorepo"
  ],
  "author": "Mauricio Izaguirre Narnajo",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.15.0"
  },
  "packageManager": "pnpm@10.15.0"
}